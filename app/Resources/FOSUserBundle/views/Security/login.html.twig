{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block hero %}
    <section id="feature-heading">
        <div class="container">
            <h1>Log in</h1>
        </div>
    </section>
{% endblock %}

{% block fos_user_content %}

    <div class="row">
        <div class="col-md-10">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="row">

                <div class="col-md-6">

                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <div class="form-group has-feedback">
                            <label for="username">{{ 'security.login.email'|trans }}</label>
                            <input class="form-control" placeholder="Email address" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                        </div>
                        <div class="form-group has-feedback">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input class="form-control" placeholder="Password" type="password" id="password" name="_password" required="required" />
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <a href="{{ path('fos_user_resetting_request') }}">
                                    {{ 'security.login.forgot_password'|trans }}
                                </a>
                            </div>
                            <div class="col-xs-4">
                                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-success btn-block btn-flat" />
                            </div>
                        </div>

                        <br><br>

                    </form>

                </div>

            </div>

        </div>
    </div>

{% endblock fos_user_content %}