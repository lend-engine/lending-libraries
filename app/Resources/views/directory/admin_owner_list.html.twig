{% extends 'directory/admin.html.twig' %}

{% block title %}A directory of lending organisations{% endblock %}

{% block head %}{% endblock %}

{% block body %}
    <div style="padding: 20px">
        <div class="row">
            <div class="col-md-12">
                <table class="dataTable table table-hover">
                    <thead>
                    <tr>
                        <td>Name</td>
                        <td>Last name</td>
                        <td>Created by</td>
                        <td>Email</td>
                        <td>Org</td>
                        <td>Added</td>
                        <td>Confirmed</td>
                        <td> </td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.firstName }}</td>
                            <td>{{ contact.lastName }}</td>
                            <td>
                                {% if contact.createdBy == contact %}
                                    <strong>Self</strong>
                                {% else %}
                                    {{ contact.createdBy.firstName }} {{ contact.createdBy.lastName }}
                                {% endif %}
                            </td>
                            <td>{{ contact.email }}</td>
                            <td>
                                {% if contact.org %}{{ contact.org.name }}{% endif %}
                            </td>
                            <td>
                                {{ contact.createdAt|date("Y-m-d") }}
                            </td>
                            <td>
                                {{ contact.isEnabled }}
                            </td>
                            <td>
                                <a href="{{ path('admin_contact', {id: contact.id}) }}">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}

{% block pagescripts %}
    <script>
        $(document).ready( function () {
            $('.dataTable').DataTable({
                ordering: true,
                pageLength: 100,
                "order": [[ 5, "desc" ]]
            });
        } );
    </script>
{% endblock %}

